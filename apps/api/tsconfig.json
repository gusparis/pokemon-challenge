{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES6",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@pokemon-shared/*": ["../../libs/src/index.ts"],
      "@auth/*": ["src/auth/*"],
      "@battle/*": ["src/battle/*"],
      "@pokemon/*": ["src/pokemon/*"],
      "@pokemon-type/*": ["src/pokemon-type/*"],
      "@users/*": ["src/users/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
